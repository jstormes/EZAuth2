{
    "name": "JStormes/EZAuth2",
    "description": "Easy OAuth 2.0 Client Library",
    "license": "MIT",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.0",
        "league/oauth2-client": "^2.3"
    },
    "require-dev": {
        "eloquent/liberator": "^2.0",
        "eloquent/phony-phpunit": "^1.0|^3.0",
        "jakub-onderka/php-parallel-lint": "^0.9.2",
        "phpunit/phpunit": "^5.7|^6.0",
        "squizlabs/php_codesniffer": "^2.3|^3.0"
    },
    "keywords": [
        "oauth",
        "oauth2",
        "authorization",
        "authentication",
        "idp",
        "identity",
        "sso",
        "single sign on"
    ],
    "authors": [
        {
            "name": "James Stormes",
            "email": "jstormes@stormes.net",
            "role": "Developer"
        }
    ],
    "autoload": {
            "psr-4": {
                "JStormes\\EZAuth2\\": "src/"
            }
        },
        "autoload-dev": {
            "psr-4": {
                "JStormes\\EZAuth2\\Test\\": "test/src/"
        }
    }
}
